
.item {
	margin: 0 5px 10px 5px;
	border-radius: 10px;
	background-color: #fff;
	padding: 10px;
	position: relative;
}
.delete {
	position: absolute;
	right: 7px;
	top: 2px;
	color: rgb(117, 117, 117);
}
.username {
	font-size: 12px;
}
.title {
	margin-top: 3px;
	font-size: 14px;
	font-weight: 600;
}
.content {
	margin: 3px 0;
	font-size: 12px;
}
.img {
	width: 100%;
	height: 100px;
}
.img image {
	width: 100%;
	height: 100%;
	border-radius: 10px;
}

